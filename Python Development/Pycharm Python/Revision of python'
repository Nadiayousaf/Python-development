def Calculate_Sum(a,b,c,d):
    Sum = a + b
    if Sum == 10:
       Sum1 = c + b
       if Sum == 20:
           Sum2 = c + d
       if Sum == 30:
          if Sum2 % 2  == 0:
                   print(f'Sum: {Sum2} Even')
          if Sum2 % 2 != 0:
                   print(f'Sum: {Sum2} Odd')
          else:
            print(f'Sum Is: {Sum}')

