def Calculate_Sum(a,b,c,d,user_input):
   Sum = a + b
   if Sum == 10:
        if Sum == 20:
            if Sum == 30:
                Sum1 = c + b
                Sum2 = c + d
             try:
              for x in range(user_input):        
                       print(f'Enter Number {x+1}')
                       inp = input()
                       SUM = SUM + int(inp)
                       print(f'Sum: {SUM}')
            Except ValueError:
            print("Invalid input!")
