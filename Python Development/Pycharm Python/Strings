# two Strings are equal
s1= "Apple"
s2="Banana"
if s1==s2:
    print("the string are equal")
else:
    print("both strings are not equal")
    
#string empty
s=" "
if not s:
    print("String Empty")
else:
    print("String not empty")
#String contain sub-strings
s="Hello world"
if "world"in s:
    print("The sub-string found  characters in string")
else:
    print("The sub-string cannot found characters in the string")
#String is Alpha numeric or not
s="Hello12345"
if s.isalnum():
    print("String is Aplphanumeric")
else:print("String is not alphanumeric")

#string is numeric
s='123456'
if s.isdigit():
    print("String is numeric")
else:
    print("String is not numeric")


#count vowels in the string
def count_vowels(str):
 vowels="aeiouAeiou"
 count=0
 for char in str:
        if char in vowels:
            count += 1
            
            return count
str="Nadia yousaf"
vowel_count=count_vowels(str )
print(f"The number of vowels in the string is:{vowel_count}")

